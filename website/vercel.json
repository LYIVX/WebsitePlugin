{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/server.js" },
    { "source": "/auth/(.*)", "destination": "/server.js" },
    { "source": "/debug-(.*)", "destination": "/server.js" },
    { "source": "/(.*)", "destination": "/server.js" }
  ],
  "redirects": [
    { 
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "www.enderfall.co.uk"
        }
      ],
      "destination": "https://enderfall.co.uk/:path*",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' vercel.live https://*.vercel.live; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self'; connect-src 'self' wss: https:; frame-src 'self'"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 